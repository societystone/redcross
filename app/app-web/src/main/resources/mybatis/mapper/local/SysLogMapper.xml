<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.app.dao.local.SysLogDAO">
    <resultMap id="BaseResultMap" type="SysLog">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="operation" property="operation" jdbcType="VARCHAR"/>
		<result column="method" property="method" jdbcType="VARCHAR"/>
		<result column="params" property="params" jdbcType="VARCHAR"/>
		<result column="ip" property="ip" jdbcType="VARCHAR"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
    </resultMap>
    <!-- 数据库列列表 -->
    <sql id="Base_Column_List">
		id, username, operation, method, params, ip, create_date
	</sql>

    <!-- 插入SysLog到数据库 -->
    <insert id="insert" parameterType="SysLog" keyProperty="id">
		insert 
		into sys_log(username, operation, method, params, ip, create_date)
		values(#{username,jdbcType=VARCHAR}, #{operation,jdbcType=VARCHAR}, #{method,jdbcType=VARCHAR},
		 #{params,jdbcType=VARCHAR}, #{ip,jdbcType=VARCHAR}, #{createDate,jdbcType=TIMESTAMP})
	</insert>

    <!-- 通过SysLog的id获得SysLog对象 -->
    <select id="selectByPrimaryKey" parameterType="long" resultType="SysLog">
        select
        <include refid="Base_Column_List"/>
        from sys_log 
        where id=#{id,jdbcType=BIGINT}
    </select>

    <!-- 获得SysLog数据集合 -->
    <select id="selectList" parameterType="SysLog" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_log
        where 1=1
       	<if test="username != null and username != ''">
       		and username = #{username}
       	</if>
		order by create_date desc
    </select>
</mapper>