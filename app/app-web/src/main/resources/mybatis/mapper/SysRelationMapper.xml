<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.app.dao.SysRelationDAO">
    <resultMap id="BaseResultMap" type="SysRelation">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="relation_type" property="relationType" jdbcType="VARCHAR"/>
        <result column="main_primary_id" property="mainPrimaryId" jdbcType="BIGINT"/>
        <result column="rel_primary_id" property="relPrimaryId" jdbcType="BIGINT"/>
    </resultMap>
    <!-- 数据库列列表 -->
    <sql id="Base_Column_List">
		id, relation_type, main_primary_id, rel_primary_id
	</sql>

    <!-- 插入SysRelation到数据库 -->
    <insert id="insert" parameterType="SysRelation" keyProperty="id">
		insert 
		into sys_relation(relation_type, main_primary_id, rel_primary_id)
		values(#{relationType,jdbcType=VARCHAR}, #{mainPrimaryId,jdbcType=BIGINT}, #{relPrimaryId,jdbcType=BIGINT})
	</insert>

    <!-- 删除SysRelation中的数据 -->
    <delete id="delete" parameterType="SysRelation">
        delete from sys_relation
        where relation_type=#{relationType,jdbcType=VARCHAR}
        	and main_primary_id=#{mainPrimaryId,jdbcType=BIGINT}
    </delete>

    <!-- 获得SysRelation数据集合 -->
    <select id="selectList" parameterType="SysRelation" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_relation
        where 1=1
       	<if test="relationType != null and relationType != ''">
       		and relation_type=#{relationType,jdbcType=VARCHAR}
       	</if>
       	<if test="mainPrimaryId != null">
       		and main_primary_id=#{mainPrimaryId,jdbcType=BIGINT}
       	</if>
    </select>
</mapper>